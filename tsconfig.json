{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"strictNullChecks": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"baseUrl": "./src",
		"paths": {
			"~/public/*": ["../public/*"],
			"~/*": ["./*"]
		}
	},
	"include": ["*/*.d.ts", "**/*.ts", "**/*.tsx", "**/*.astro"],
	"exclude": ["node_modules"]
}
